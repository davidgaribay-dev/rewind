# PostgreSQL Configuration
POSTGRES_USER=rewind
POSTGRES_PASSWORD=rewind_dev_password
POSTGRES_DB=rewind
DATABASE_URL=postgresql://rewind:rewind_dev_password@localhost:54329/rewind

# API Configuration
API_PORT=8429
WEB_URL=http://localhost:8430

# Web Application Configuration
# Web dev server port (React Router dev server)
WEB_PORT=8430
# URL where the API server is running (used by the web frontend)
# For local development: http://localhost:8429
# For Docker: http://localhost:8429 (since web container accesses host network)
VITE_API_URL=http://localhost:8429

# Logging Configuration
# Log level: error, warn, info, verbose, debug
LOG_LEVEL=info
# Node environment: development, production
NODE_ENV=development

# Claude Code Data Path
# Path to your Claude Code projects directory (contains conversation .jsonl files)
# Common locations:
# - macOS/Linux: ~/.claude/projects
# - Windows: %USERPROFILE%\.claude\projects
REWIND_DATA_PATH=~/.claude/projects
